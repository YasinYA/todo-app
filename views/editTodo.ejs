<!DOCTYPE html>
<html>
<head>
    <% include ./partials/head.ejs %>
</head>
<body>
    <header class="container-fluid">
        <% include ./partials/header.ejs %>
    </header>

    <main class="container">
        <h1>Edit Todo</h1>
        <form name="createTodoFrom" action="/edittodo?_method=PUT" method="POST">
            <div class="form-group">
                <label for="task">Task</label>
                <input type="text" class="form-control" name="task" id="task" aria-describedby="Task" value="<%= todo.task %>" placeholder="Todo Task" required>
                <input type="hidden" class="form-control" name="id" id="todoId" aria-describedby="TodoId" value="<%= todo.id %>">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <% if (messages) { -%>
            <% for(let i = 0; i < messages.length; i++) { -%>
                <div class="alert alert-danger mt-3" role="alert">
                  <%= messages[i] %>
                </div>
            <% } -%>
        <% } -%>
    </main>

    <footer class="container-fluid">
        <% include ./partials/footer.ejs %>
    </footer>
</body>
</html>